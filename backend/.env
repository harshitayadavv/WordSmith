# Groq API Configuration
GROQ_API_KEY=

# Database Configuration
# For local development (SQLite - default)
DATABASE_URL=sqlite:///./wordsmith.db

# For PostgreSQL (AWS RDS or local PostgreSQL)
# Uncomment and configure these when deploying to AWS:
# DATABASE_URL=postgresql://username:password@host:port/database_name
# POSTGRES_USER=wordsmith
# POSTGRES_PASSWORD=your_secure_password
# POSTGRES_HOST=your-rds-endpoint.region.rds.amazonaws.com
# POSTGRES_PORT=5432
# POSTGRES_DB=wordsmith_db

# Application Settings
DEBUG=true
PORT=8000

# History Settings
HISTORY_RETENTION_DAYS=7
MAX_HISTORY_PER_USER=100

# LangChain (Optional)
LANGCHAIN_TRACING_V2=false
LANGCHAIN_API_KEY=